---
name: syslog_storer

templates:
  pre-start.erb: bin/pre-start
  rsyslog.conf.erb: config/rsyslog.conf

provides:
- name: syslog_storer
  type: syslog_storer
  properties:
  - port
  - transport

properties:
  port:
    description: Port of the syslog drain
    default: 514
  transport:
    default: udp
    description: One of ["udp", "tcp", "relp"]. 

  custom_rule:
    default: ""
    description: Custom rule for syslog event forwarder

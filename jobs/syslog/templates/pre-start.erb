#!/bin/bash
set -e
set -x

mkdir -p /etc/rsyslog.d
mkdir -p /var/vcap/sys/rsyslog/buffered
chown -R syslog:adm /var/vcap/sys/rsyslog/buffered

<% if_p('ca_cert') do %>
  cp $(dirname $0)/ca_cert.pem /etc/rsyslog.d/ca_cert.pem
<% end %>
pwd
cp $(dirname $0)/rsyslog.conf /etc/rsyslog.conf
service rsyslog restart
